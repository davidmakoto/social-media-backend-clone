<header>
    <div class="nav-bar">
      <%= link_to root_path do %>
        <%= image_tag "/images/logo.svg", class: "logo-nav-bar" %>
      <% end %>

    <div class="search-bar-container center">

      <div class="search center">
            <form action="#">
                <input type="text"
                    placeholder="Search for tags or usernames"
                    name="search">
                <button>
                  <img alt="svgImg" class="" src="data:image/svg+xml;base64,"/>
                </button>
            </form>
        </div>
      </div>


      <div class="user-controls">
        <p class="navbar-text float-right">
          <% if user_signed_in? %>
            <p class="user-status center">
            <div class="self-avatar avatar wrapper">
              <img src="/images/default-avatar.png" alt="avatar">
            </div>
              <div class="center">
                <%= current_user.name || current_user.email %>
              </div>
            </p>
            <%= button_to("Edit Profile", edit_user_registration_path, class: 'low-profile-button', method: :get) %>
            <%= button_to("Log Out", destroy_user_session_path, method: :delete, class: 'low-profile-button') %>
          <% else %>
            <%= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'  %> |
            <%= link_to "Login", new_user_session_path, :class => 'navbar-link'  %>
          <% end %>
        </p>
      </div>
    </div>
  </header>
